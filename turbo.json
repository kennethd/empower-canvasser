{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        ".vercel/**",
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "outputs": [],
      "dependsOn": ["^build", "^lint"]
    },
    "check-types": {
      "outputs": [],
      "dependsOn": ["^build", "^check-types"]
    },
    "dev": {
      "outputs": [],
      "env": ["API_SERVER_URL", "DBHOST", "DBPORT", "DBNAME", "DBUSER", "DBPASS"],
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
